<?xml version="1.0" encoding="utf-8"?>
<window>
  <controls>
    <!-- 
    This skin file is meant for all controls that should be visible for the user
    when in the search view of the plugin. All controls should be tagged at a minimum
    with "<visible>Control.IsVisible(101)</visible>". 
    -->

    <control>
      <description>header text</description>
      <type>label</type>
      <posX>12</posX>
      <posY>12</posY>
      <width>900</width>
      <font>font11</font>
      <label>SubCentral - Subtitle Search</label>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>Control.IsVisible(101)</visible>
    </control>

    
    <control>
      <type>label</type>
      <posX>100</posX>
      <posY>410</posY>
      <label>#subcentral.search.file.description {#subcentral.search.file.name} - From #subcentral.search.file.source.name</label>
      <visible>Control.IsVisible(101)</visible>
    </control>
    
    <control>
      <description>Search Button</description>
      <type>button</type>
      <id>200</id>
      <label>Search</label>
      <posX>100</posX>
      <posY>510</posY>
      <onup>201</onup>
      <ondown>201</ondown>
      <visible>Control.IsVisible(101)</visible>
    </control>

    <control>
      <description>Cancel Button</description>
      <type>button</type>
      <id>201</id>
      <label>Cancel</label>
      <posX>100</posX>
      <posY>550</posY>
      <onup>200</onup>
      <ondown>200</ondown>
      <visible>Control.IsVisible(101)</visible>
    </control>
    
  </controls>
</window>