<?xml version="1.0" encoding="utf-8"?>
<window>
	<id>84623</id>
	<defaultcontrol>912</defaultcontrol>
	<allowoverlay>control.isvisible(1337)</allowoverlay> <!-- no! -->
	<define>#header.label:#SubCentral.Header.Label</define>
	<define>#header.background.custom:SubCentral_Background.png</define>
	<!--
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	-->
	<controls>
		<!-- 
		This is the main subcentral skin file and should contain all screen elements that are common
		to all views in the GUI. Anything that belongs only in a specific view should be placed in the
		coorespodning subfile.
		-->

		<!-- Dummy Controls meant for visibility and status purposes. -->
		<control>
			<description>Visible when in the main view mode.</description>
			<type>label</type>
			<id>101</id>
			<posX>-50</posX>
			<posY>-50</posY>
			<width>0</width>
		</control>
		<control>
			<description>Visible when in the file view mode.</description>
			<type>label</type>
			<id>102</id>
			<posX>-50</posX>
			<posY>-50</posY>
			<width>0</width>
		</control>
		<control>
			<description>Visible when in the manual search mode.</description>
			<type>label</type>
			<id>103</id>
			<posX>-50</posX>
			<posY>-50</posY>
			<width>0</width>
		</control>
		
		<control>
			<description>BG</description>
			<type>image</type>
			<id>0</id>
			<posX>-152</posX>
			<posY>0</posY>
			<width>1024</width>
			<height>576</height>
			<texture>#header.background.custom</texture>
		</control>
		
		<control>
			<description>Backdrop</description>
			<type>image</type>
			<id>0</id>
			<posX>-152</posX>
			<posY>0</posY>
			<width>1024</width>
			<height>576</height>
			<texture>#SubCentral.Search.Media.FanArt</texture>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>
			<texture>SubCentral_MainOverlay.png</texture>
		</control>

		<!-- Controls common to all views of the GUI -->
		<!--<import>common.window.xml</import>-->
		<!--<import>common.time.xml</import>-->

		<control>
			<type>image</type>
			<id>0</id>
			<posX>-2</posX>
            <posY>-3</posY>
			<width>56</width>
			<height>56</height>
			<texture>hover_subcentral.png</texture>
			<visible>true</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>
        <control>
            <description>Current View/Category Label</description>
            <type>label</type>
            <label>#header.label</label>
            <id>0</id>
            <posX>53</posX>
            <posY>15</posY>
            <width>400</width>
            <align>left</align>
            <font>font13</font>
			<textcolor>ffFFFFFF</textcolor>
            <visible>true</visible>
			<animation effect="fade" time="250">WindowClose</animation>
        </control>
		
		<control>
			<description>Date Time</description>
			<type>label</type>
			<id>0</id>
			<posX>710</posX>
			<posY>3</posY>
			<label>#date / #time</label>
			<align>right</align>
			<font>font12</font>
			<textcolor>ffa9d0f7</textcolor>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<!-- Imports for various views of the GUI -->
		<import>SubCentral.Main.xml</import>
		<import>SubCentral.Search.xml</import>
		<import>SubCentral.ModifySearch.xml</import>
		<!-- TODO MS-->
		<!--<import>TVSeries.Overlay.xml</import>-->

		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>202</defaultcontrol>
			<onexit>50</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>106</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>568</width>
			<height>900</height>
			<dimColor>00ffffff</dimColor>
			<control>
				<type>image</type>
				<posX>15</posX>
				<posY>63</posY>
				<width>263</width>
				<height>473</height>
				<texture>Backslide.png</texture>
				<colorDiffuse>fffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)+!control.hasfocus(912)</visible>
				<animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
				<visible>!control.hasfocus(50)+!control.hasfocus(912)</visible>				
				<control>
					<description>button group</description>
					<type>group</type>
					<animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
					<animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
					<posX>40</posX>
					<posY>97</posY>
					<layout>StackLayout</layout>
					<visible>!control.hasfocus(50)+!control.hasfocus(912)</visible>
					<control>
						<description>Cancel Button</description>
						<type>button</type>
						<id>202</id>
						<label>Cancel</label>
						<onup>201</onup>
						<ondown>203</ondown>
						<onleft>202</onleft>
						<onright>912</onright>
					</control>
					<control>
						<description>Languages Button</description>
						<type>button</type>
						<id>203</id>
						<label>Languages</label>
						<onup>202</onup>
						<ondown>204</ondown>
						<onleft>203</onleft>
						<onright>912</onright>
					</control>
					<control>
						<description>Modify Search Button</description>
						<type>button</type>
						<id>204</id>
						<label>Modify search</label>
						<onup>203</onup>
						<ondown>206</ondown>
						<onleft>204</onleft>
						<onright>912</onright>
					</control>
					<control>
						<description>Delete Subtitles Button</description>
						<type>button</type>
						<id>206</id>
						<label>Delete subtitles</label>
						<onup>204</onup>
						<ondown>205</ondown>
						<onleft>206</onleft>
						<onright>912</onright>
					</control>
					<control>
						<description>Sort</description>
						<type>sortbutton</type>
						<id>205</id>
						<label>Sort</label>
						<onup>206</onup>
						<ondown>202</ondown>
						<onleft>205</onleft>
						<onright>912</onright>
					</control>
				</control>			
			</control>
		</control>
	</controls>
